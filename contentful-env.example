# Contentful Configuration
# Copy this file to .env.local and fill in your actual values

# Server-side variables (for SSG/SSR)
CONTENTFUL_SPACE_ID=your_space_id_here
CONTENTFUL_ACCESS_TOKEN=your_access_token_here

# Client-side variables (for browser)
NEXT_PUBLIC_CONTENTFUL_SPACE_ID=your_space_id_here
NEXT_PUBLIC_CONTENTFUL_ACCESS_TOKEN=your_access_token_here

# Management token (for scripts)
CONTENTFUL_MANAGEMENT_TOKEN=your_management_token_here

# Vercel Deploy Hook (for automatic deployments)
# Get this from: Vercel Dashboard → Your Project → Settings → Git → Deploy Hooks
VERCEL_DEPLOY_HOOK_URL=https://api.vercel.com/v1/integrations/deploy/your_hook_id_here

# Set to true to use Contentful, false to use local data  
NEXT_PUBLIC_USE_CONTENTFUL=false
